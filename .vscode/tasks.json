{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Docs: Install Python Dependencies",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"/requirements.txt"
			],
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docs"
			}
		},
		{
			"label": "Docs: Run Server",
			"type": "shell",
			"command": "mkdocs",
			"args": [
				"serve"
			],
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docs"
			},
			"dependsOn": "Docs: Install Python Dependencies"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/csharp/workshop/AgentWorkshop.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/csharp/workshop/AgentWorkshop.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/csharp/workshop/AgentWorkshop.sln"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}